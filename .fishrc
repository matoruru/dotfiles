# To remove the message at fish login
set fish_greeting

# Set alias
alias ll='ls -alF'
alias vim='vim -p'
alias vi='vim'
alias mocp='mocp -T mytheme'
alias showtodo="fish ~/repositories/matoruru/gentoo-tools/showtodo.fish"
alias edittodo="vim ~/todolist.txt;showtodo"
alias su="sudo su -"
alias scrot="scrot -q 100"

# Set yimmy theme
. ~/repositories/theme-yimmy/fish_prompt.fish

# when you  want to use dual monitors
function dualon
   set ROTATE right # at home
#set ROTATE normal # at work
   xrandr --output HDMI1 --auto --above eDP1 --rotate $ROTATE
end

function dualoff
   xrandr --output HDMI1 --off
end

# wraper of dict command
function dic
   if test -n "$argv[1]"
      dict $argv[1] | less
      return
   end

   while true
      read word
      if test -z "$word"
         return
      end
      dict $word | less
   end
end

# switch apatche server on/off
function httpon
   sudo /etc/init.d/apache2 start
end

function httpoff
   sudo /etc/init.d/apache2 stop
end

# switch wifi on/off
function wifion
   sudo /etc/init.d/net.wlp2s0 start
end

function wifioff
   sudo /etc/init.d/net.wlp2s0 stop
end
