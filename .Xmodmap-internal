! CapsLock -> Control_L
clear lock
clear control
keycode 66 = Control_L
add control = Control_L Control_R

! Alt_L   -> Super_L
! Alt_R   -> Super_R
clear mod1
keycode 64  = Super_L
keycode 108 = Super_R
add mod1 = Alt_L Alt_R Meta_L

! Super_L -> Alt_L
clear mod4
keycode 133 = Alt_L
add mod4 = Super_L Super_R Super_L Hyper_L
